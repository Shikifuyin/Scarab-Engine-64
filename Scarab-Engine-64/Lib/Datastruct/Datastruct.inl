// Datastruct implementation

inline Void Datastruct::UseMemory( MemoryContextID iMemoryContextID, MemoryAllocatorID iAllocatorID ) {
    Assert( !IsCreated() );
    m_iMemoryContextID = iMemoryContextID;
    m_iAllocatorID = iAllocatorID;
}

inline Bool Datastruct::IsEmpty() const {
    return ( Count() == 0 );
}
