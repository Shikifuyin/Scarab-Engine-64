// XMLText implementation
inline const GChar * XMLText::GetText( UInt * outLength ) const {
    if ( outLength != NULL )
        *outLength = ( m_strText.Count() - 1 );
    return (const GChar *)m_strText;
}
inline Array<GChar> * XMLText::EditText() {
    return &m_strText;
}


