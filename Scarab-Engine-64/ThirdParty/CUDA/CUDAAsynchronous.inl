/////////////////////////////////////////////////////////////////////////////////
// CUDAEvent implementation
inline Bool CUDAEvent::IsCreated() const {
	return ( m_hEvent != NULL );
}

/////////////////////////////////////////////////////////////////////////////////
// CUDAStream implementation
inline Bool CUDAStream::IsCreated() const {
	return ( m_hStream != NULL );
}

inline Bool CUDAStream::IsCapturing() const {
	CUDAStreamCaptureStatus iStatus;
	UInt64 iCaptureID;
	GetCaptureInfo( &iStatus, &iCaptureID );
	return ( iStatus == CUDA_STREAM_CAPTURE_STATUS_ACTIVE );
}
