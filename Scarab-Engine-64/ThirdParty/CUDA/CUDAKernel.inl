// CUDAKernel implementation
inline Void CUDAKernel::SetSharedMemory( SizeT iSharedMemorySize ) {
	m_iSharedMemorySize = iSharedMemorySize;
}
inline Void CUDAKernel::SetStream( CUDAStream * pStream ) {
	m_pStream = pStream;
}

inline Void CUDAKernel::SetParameter( UInt iIndex, Void * pParameter ) {
	DebugAssert( iIndex < m_iParameterCount );
	m_arrKernelParameters[iIndex] = pParameter;
}

