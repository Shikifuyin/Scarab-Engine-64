// WinGUIContainerModel implementation
inline const WinGUIContainerParameters * WinGUIContainerModel::GetCreationParameters() const {
	return &m_hCreationParameters;
}

/////////////////////////////////////////////////////////////////////////////////
// WinGUIContainer implementation
inline WinGUIElementType WinGUIContainer::GetElementType() const {
	return WINGUI_ELEMENT_CONTAINER;
}

inline UInt WinGUIContainer::GetChildCount() const {
	return m_iChildCount;
}
inline WinGUIElement * WinGUIContainer::GetChild( UInt iIndex ) const {
	DebugAssert( iIndex < m_iChildCount );
	return m_arrChildren[iIndex];
}




